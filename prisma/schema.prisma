generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ASSISTANT
}

model Chat {
  id        Int    @id @default(autoincrement())
  sessionId String
  role      Role
  content   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
