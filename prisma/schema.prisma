generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ASSISTANT
  TOOL
}

model Chat {
  id         Int     @id @default(autoincrement())
  sessionId  String
  role       Role
  content    String
  toolCallId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
